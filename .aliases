# navigation
alias ..='cd ..'
alias ...='cd ../..'
alias cdp='cd ~/Projects'

# modern replacements
alias ls='eza'
alias ll='eza -la --no-permissions'
alias lt='eza --tree --level=2'
alias rm='trash'
alias top='btop'
alias f='fd'
alias grep='rg'
alias help='tldr'

# tools
alias y='yarn'
alias p='pnpm'
alias pi='pnpm install'
alias b='bun'
alias bi='bun install'
alias br='bun run'
alias bd='bun dev'
alias g='git'
alias gs='git status'
alias cc='claude --dangerously-skip-permissions'
